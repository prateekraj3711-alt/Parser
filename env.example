# Watch folder for candidate files
WATCH_FOLDER=/data/candidates

# Google Sheets configuration
GOOGLE_SHEET_ID=your_sheet_id_here
GOOGLE_SERVICE_ACCOUNT_JSON=path/to/service-account.json
# OR provide JSON as string:
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Google Drive configuration (optional - for fetching files from Drive)
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here
# OR use folder URL:
GOOGLE_DRIVE_FOLDER_URL=https://drive.google.com/drive/folders/YOUR_FOLDER_ID
# Polling interval in seconds (default: 300 = 5 minutes)
DRIVE_POLL_INTERVAL=300

# SV Admin Portal configuration
SV_PORTAL_URL=https://admin.example.com
SV_ADMIN_EMAIL=admin@example.com
SV_ADMIN_PASSWORD=your_password_here

# LLaMA model configuration (optional)
LLAMA_MODEL_PATH=models/llama-model.gguf
LLAMA_N_CTX=4096
LLAMA_N_THREADS=4

# Processing configuration
PROCESSED_HASHES_FILE=processed_hashes.json
LOG_FILE=candidate_parser.log

# Flask keep_alive configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=8080



